<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Camera">

    <Button
        android:id="@+id/btnCapturePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="202dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="202dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="125dp"
        android:text="take a picture"
        app:layout_constraintBottom_toTopOf="@+id/btnRecordVideo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRecordVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="262dp"
        android:layout_marginEnd="201dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="201dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="28dp"
        android:text="record a video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCapturePicture" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="455dp"
        android:layout_marginEnd="52dp"

        android:layout_marginLeft="235dp"
        android:layout_marginRight="52dp"
        android:layout_marginStart="235dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text="Preview"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgPreview"
        android:layout_width="147dp"
        android:layout_height="121dp"
        android:visibility="gone"
         />

    <VideoView
        android:id="@+id/videoPreview"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:visibility="gone"
         />
</android.support.constraint.ConstraintLayout>